{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "comma-dangle": 2,
    "object-curly-spacing": 2,
    "arrow-body-style": ["error", "always"],
    "no-unused-vars": 2,
    "no-unused-labels": 2,
    "no-console": 2,
    "no-undef": 2,
    "node/no-missing-import": "error"
  },
  "globals": {
    "__DEVSERVER__": true,
    "__DEVCLIENT__": true
  }
}
